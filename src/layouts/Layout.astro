---
import '../styles/global.css';
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter, fade } from "astro:transitions";

const { title = "Anuj" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <ClientRouter />
  </head>

  <body class="min-h-screen bg-gradient-to-b from-teal-50 via-white to-stone-200 text-zinc-900">
    <Header
      transition:persist
      transition:name="chrome"
      transition:animate={fade({ duration: "160ms" })}
    />

    <main
      id="page"
      transition:name="page"
      transition:animate={fade({ duration: "220ms"})}
      class="min-h-[60vh]"
    >
      <slot />
    </main>

    <Footer
      transition:persist
      transition:name="chrome"
      transition:animate={fade({ duration: "160ms" })}
    />
  </body>
</html>
